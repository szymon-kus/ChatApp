@{
ViewData["Title"] = "Chat";
var loggedInUser = ViewBag.LoggedInUser;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Chat.css" />
    <title>@ViewData["Title"] - ChatGPT</title>
</head>
<body>
<header>
    <h1>Chat</h1>
</header>
<main>
    <div class="container">
        <div class="user-list">
            <h2>Users</h2>
            <ul id="userList">
                @foreach (var user in ViewBag.Users)
                {
                <li>
                    <span class="status-indicator @((user.Username == loggedInUser) ? "online" : "offline")"></span>
                    @user.Username
                </li>
                }
            </ul>
        </div>
        <div class="chat-window">
            <div id="chatMessages">
                <!-- Wiadomości czatu będą tutaj -->
            </div>
            <div id="chatInput">
                <input type="hidden" id="loggedInUser" value="@loggedInUser" />
                <input type="text" id="messageInput" placeholder="Type your message here..." />
                <button onclick="sendMessage()">Send</button>
            </div>
        </div>
    </div>
</main>
<script src="~/js/chat.js"></script>
</body>
</html>
