@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/RegisterLogin.css" />
</head>
<body>
    <header>
        <h1>Welcome to ChatGPT</h1>
    </header>

    <main>
        <div id="mainContainer">
            <div id="registerLoginContainer">
                <p id="Signup">Login</p>
                <input class="firstInput" type="text" placeholder="Username">
                <input type="text" placeholder="Password">
                <button>Login</button>
                <p id="LoginLink">Don't have an account ? <a asp-controller="Home" asp-action="Register">Register</a></p>
            </div>
        </div>
    </main>
</body>
</html>

